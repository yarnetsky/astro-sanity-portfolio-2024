---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import { getPages } from "../utils/sanity";


const pages = await getPages();
const filteredPages = pages.filter(page => page.tags.includes('Service'));
---

<Layout title="Jerry Yarnetsky: Service">

  <section>
    <h2>Service</h2>
    {filteredPages.map((page) => <Card page={page} />)}
  </section>
</Layout>

<style>
  h2 {
    padding: var(--space-3) var(--space-6);
  }
  </style>

