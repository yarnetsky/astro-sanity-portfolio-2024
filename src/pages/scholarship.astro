---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import { getPages } from "../utils/sanity";


const pages = await getPages();
const filteredPages = pages.filter(page => page.tags && page.tags.includes('Scholarship'));
---

<Layout title="Jerry Yarnetsky: Scholarship">

  <section>
    <h2 class="section__title">Scholarship</h2>
    {filteredPages.map((page) => <Card page={page} />)}
  </section>
</Layout>


