---
import { formatDate } from "../utils";
import { urlFor } from "../utils/image";
import type { Page } from "../utils/sanity";

interface Props {
  page: Page;
}

const { page } = Astro.props;
---

<div class="card">
  {
    page.mainImage ? (
      <img
        class="card__cover"
        src={urlFor(page.mainImage).width(500).height(300).url()}
        alt="Cover image"
      />
    ) : (
      <div class="card__cover--none" />
    )
  }
  <div class="card__container">
    <h3 class="card__title">
      <a
        class="card__link"
        href={`${page.slug.current}`}
      >
        {page.title}
      </a>
    </h3>
     <!-- <p class="card__excerpt">{page.excerpt}</p>
  <p class="card__date">
      {page.tags && (
          <p class="section-list">
            {page.tags.map((tag, index) => (
              <span>
                {index > 0 && ", "}
                {tag}
              </span>
            ))}
          </p>
        )} 
    </p>-->
  </div>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    padding: var(--space-5) var(--space-6) var(--space-3) var(--space-6);
    margin: var(--space-4) 0;
    position: relative;
    border-top: 1px solid var(--blue-600);

    & .card__container {
      margin: 0 var(--space-1) 0;
    }

    & .card__cover {
      width: 100%;
      height: 231px;
      object-fit: cover;
    }

    & .card__cover--none {
      width: 100%;
      height: 231px;
      background: var(--black);
    }

    & .card__title {
      font-family: var(--font-family-sans);
      font-weight: 600;
      font-size: var(--font-size-6);
      line-height: var(--line-height-5);
      letter-spacing: -0.025em;
      margin: var(--space-3) 0;
    }

    & .card__excerpt {
      font-family: var(--font-family-serif);
      font-weight: 400;
      font-size: var(--font-size-4);
      line-height: var(--line-height-3);
      margin-top: 0;
    }

    & .card__date {
      font-weight: 600;
      font-family: var(--font-family-sans);
      font-size: var(--font-size-1);
      margin-top: calc(var(----space-4) + 7);
    }

    & .card__link {
      color: var(--black);
      text-decoration: none;

      &:hover {
        opacity: 0.8;
        transition: 0.2s;
      }

      &::before {
        content: "";
        position: absolute;
        inset: 0;
      }
    }

    &:first-child {
      border-top-left-radius: 3px;
      border-top-right-radius: 3px;
    }

    &:last-child {
      border-bottom-left-radius: 3px;
      border-bottom-right-radius: 3px;
    }
  }

  @media (min-width: 575px) {
    .card {
      

      & .card__title {
        margin-top: var(--space-4);
      }
    }
  }

  @media (min-width: 800px) {
    .card {
      flex-direction: row;
      

      & .card__container {
        margin: 0 var(--space-4) 0;
      }

      & .card__cover,
      & .card__cover--none {
        min-width: 366.5px;
        max-width: 366.5px;
        max-height: 231px;
      }
    }
  }
</style>
